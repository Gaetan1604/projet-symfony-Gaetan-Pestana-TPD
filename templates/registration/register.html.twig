{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container my-5 d-flex justify-content-center">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 15px;">
            <h2 class="card-title text-center mb-4" style="font-family: 'Comic Sans MS', cursive; color: #007bff;">Rejoignez-nous !</h2>
            <div class="card-body">
                {{ form_start(registrationForm) }}
                
                <div class="form-group mb-3 position-relative">
                    <span class="icon-email position-absolute">
                        <i class="fas fa-envelope"></i>
                    </span>
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control ps-5', 'placeholder': 'Votre email'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
                
                <div class="form-group mb-3 position-relative">
                    <span class="icon-password position-absolute">
                        <i class="fas fa-lock"></i>
                    </span>
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control ps-5', 'placeholder': 'Cr√©er un mot de passe'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="form-check mb-3">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg animate-button">S'inscrire</button>
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
